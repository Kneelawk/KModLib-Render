{
  "schemaVersion": 1,
  "id": "kmodlib-rendertag",
  "version": "${version}",

  "name": "KModLib RenderTag",
  "description": "Client-only version of tags for use in rendering.",
  "authors": [
    "Kneelawk"
  ],
  "contact": {
    "homepage": "https://github.com/Kneelawk/KModLib",
    "sources": "https://github.com/Kneelawk/KModLib",
    "issues": "https://github.com/Kneelawk/KModLib/issues"
  },

  "license": "MIT",
  "icon": "assets/kmodlib-rendertag/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "com.kneelawk.kmodlib.client.rendertag.KMLRenderTagMod"
    ]
  },
  "mixins": [ ],

  "depends": {
    "fabricloader": ">=0.15.10",
    "fabric-api": "*",
    "minecraft": "~1.21-",
    "java": ">=21"
  },
  "suggests": {
    "flamingo": "*"
  },

  "custom": {
    "modmenu": {
      "badges": [ "library" ],
      "parent": {
        "id": "kmodlib",
        "name": "KModLib",
        "description": "Kneelawk's Minecraft mod library with utility code for other mods.",
        "icon": "assets/kmodlib-rendertag/icon.png",
        "badges": [ "library" ]
      }
    }
  }
}
